.navbar.navbar-default.navbar-static-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Employee Portal
    .navbar-collapse.collapse
      ul.nav.navbar-nav
        li(class=title=='Home'?'active':undefined)
          a(href='/') Home
        li(class=title=='Sign In'?'active':undefined)
          if user
            if (user.userType === 'Contractor')
             li.dropdown
              a.dropdown-toggle(href="#", data-toggle="dropdown") Company Data
               .caret
               ul.dropdown-menu
                li
                  a(href="#") View Safety Profile
                li
                  a(href="/newcont") New Safety Profile
                li
                  a(href="#") View Employee List
            else if (user.userType === 'Safety Employee')
             li.dropdown
              a.dropdown-toggle(href="#", data-toggle="dropdown") Personnel Data
               .caret
               ul.dropdown-menu
                li
                  a(href="#") Contractor List
                li
                  a(href="#") Plant Employees
                li
                  a(href="#") Office Employees
                li
                  a(href="#") Security
                li
                  a(href="#") Associates
            else if (user.userType === 'Plant Employee')
             li.dropdown
              a.dropdown-toggle(href="#", data-toggle="dropdown") Personnel Data
               .caret
               ul.dropdown-menu
            else if (user.userType === 'Office Employee')
             li.dropdown
              a.dropdown-toggle(href="#", data-toggle="dropdown") Personnel Data
               .caret
               ul.dropdown-menu
            else if (user.userType === 'Associate')
             li.dropdown
              a.dropdown-toggle(href="#", data-toggle="dropdown") Personnel Data
               .caret
               ul.dropdown-menu
            else if (user.userType === 'Security')
             li.dropdown
              a.dropdown-toggle(href="#", data-toggle="dropdown") Personnel Data
               .caret
               ul.dropdown-menu
      ul.dropdown-menu
        li
          a(href='#') Action
        li
          a(href='#') Another action
        li
          a(href='#') Something else here
        li.divider
        li.dropdown-header Nav header
        li
          a(href='#') Separated link
        li
          a(href='#') One more separated link
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=title=='Login'?'active':undefined)
            a(href='/login') Login
           if secrets.localAuth
             li(class=title=='Create Account'?'active':undefined)
               a(href='/signup') Create Account
        else
          li.dropdown(class=title=='Express'?'active':undefined)
            a.dropdown-toggle(href="#", data-toggle="dropdown") Account
              ul.dropdown-menu
                li: a(href='/account') Account Settings
                li.divider
                li: a(href='/logout') Logout
